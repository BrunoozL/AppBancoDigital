<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.PixReceber"
             BackgroundColor="Black">
    <ContentPage.Content>
        <Grid VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout>
                <Button x:Name="Gerar_QrCode"  Text="Gerar QR CODE" Clicked="Gerar_QrCode_Clicked"/>

                <Label Text="QR Code vai aparecer abaixo: " />

                <Image x:Name="img_qrcode" />

                <Button x:Name="btn_voltar" TextColor="#FF1493"
                        TextTransform="None" HorizontalOptions="StartAndExpand"
                        Text="Voltar" CornerRadius="20"
                        BorderWidth="1" BorderColor="#FF1493" Margin="20"
                        BackgroundColor="Transparent" Clicked="btn_voltar_Clicked"/>

            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>