<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Login"
             xmlns:control="clr-namespace:Xamarin.Forms.MaskedEntry;assembly=Xamarin.Forms.MaskedEntry" xmlns:local="clr-namespace:AppBancoDigital"
             Title="Login">
    <ContentPage.Background>
        <LinearGradientBrush>
            <GradientStop Color="DimGray"
                          Offset="0.1"/>
            <GradientStop Color="DarkCyan"
                          Offset="2"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Content>

        <StackLayout VerticalOptions="Center">

            <Image x:Name="logo" Scale="2"/>
            <Label Text="LOGIN" FontSize="Title" HorizontalOptions="Center" TextColor="Black"/>
            <Label Text=""/>
            <Label Text=""/>

            <Frame CornerRadius="10"
                   x:Name="form_login"
                   VerticalOptions="CenterAndExpand"
                   BackgroundColor="Transparent"
                   BorderColor="#000123"
                   Margin="20">
                <StackLayout>
                    <Label Text="CPF" TextColor="Black"/>
                    <control:MaskedEntry x:Name="txt_cpf" Keyboard="Numeric" FontAttributes="Bold" Mask="XXX.XXX.XXX-XX"/>
                    <Label Text="Senha" TextColor="Black"/>
                    <Entry x:Name="txt_senha"
                           Keyboard="Default"
                           IsPassword="True"
                           ReturnType="Done"/>
                </StackLayout>
            </Frame>

            <Button x:Name="btn_login" TextColor="Black"
                    TextTransform="None" HorizontalOptions="Center"
                    Text="Entrar" CornerRadius="20"
                    BorderWidth="1" BorderColor="Black"
                    BackgroundColor="#00CDCD" Clicked="btn_login_Clicked"/>

            <Label Text=""/>
            <Button x:Name="btn_CriarConta" Text="Não tem uma conta? Criar uma conta."
                    FontAttributes="Italic" TextTransform="None"
                    BackgroundColor="Transparent" TextColor="#fff"
                    CornerRadius="20" HorizontalOptions="Center"
                    Clicked="btn_CriarConta_Clicked"/>
            <Label Text=""/>
            <Button x:Name="btn_voltar" TextColor="Black"
                    TextTransform="None" HorizontalOptions="StartAndExpand"
                    Text="Voltar" CornerRadius="20"
                    BorderWidth="1" BorderColor="Black" Margin="20"
                    BackgroundColor="#00CDCD" Clicked="btn_voltar_Clicked"/>
            

        </StackLayout>

    </ContentPage.Content>
</ContentPage>

