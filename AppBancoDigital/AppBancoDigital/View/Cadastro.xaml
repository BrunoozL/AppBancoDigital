<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Cadastro"
             xmlns:control="clr-namespace:Xamarin.Forms.MaskedEntry;assembly=Xamarin.Forms.MaskedEntry" xmlns:local="clr-namespace:AppBancoDigital"
             Background="Black">
    <ContentPage.Content>
        

        <StackLayout VerticalOptions="Center">

            <Image x:Name="logo" Scale="1.7" HorizontalOptions="Center"/>
            <Label Text=""/>
            <Label Text=""/>
            <Label Text="CADASTRO" FontSize="Title" HorizontalOptions="Center"
                   TextColor="#00FF7F"/>
            

            <Frame CornerRadius="10"
                   x:Name="form_cadastro"
                   VerticalOptions="CenterAndExpand"
                   BackgroundColor="Transparent"
                   BorderColor="#00FF7F"
                   Margin="20">
                <StackLayout>
                    <Label Text="Nome:" TextColor="#00FF7F"/>
                    <Entry x:Name="txt_nome"
                           Keyboard="Default"
                           TextColor="#00FF7F"/>
                    <Label Text="CPF:" TextColor="#00FF7F"/>
                    <control:MaskedEntry x:Name="txt_cpf" TextColor="#00FF7F" Keyboard="Numeric" FontAttributes="Bold" Mask="XXX.XXX.XXX-XX"/>
                    <Label Text="Email:" TextColor="#00FF7F" />
                    <Entry x:Name="txt_email" TextColor="#00FF7F"/>
                    <Label Text="Senha:" TextColor="#00FF7F"/>
                        <Entry x:Name="txt_senha"
                           Keyboard="Default"
                           IsPassword="True"
                           ReturnType="Done"
                           TextColor="#00FF7F"/>
                    <Label Text="Data de Nascimento:" TextColor="#00FF7F"/>
                    <DatePicker x:Name="dtcpk_nascimento"
                                Format="dd/MM/yyyy"
                                TextColor="#00FF7F"/>
                </StackLayout>
            </Frame>

            <Button x:Name="btn_cadastro" TextColor="Black"
                    TextTransform="None" HorizontalOptions="CenterAndExpand"
                    Text="Cadastrar" CornerRadius="20"
                    BorderWidth="1" BorderColor="Black"
                    BackgroundColor="#00FF7F" Clicked="btn_cadastro_Clicked"/>

            <Button x:Name="btn_voltar" TextColor="Black"
                    TextTransform="None" HorizontalOptions="StartAndExpand"
                    Text="Voltar" CornerRadius="20" Margin="20"
                    BorderWidth="1" BorderColor="Black"
                    BackgroundColor="#00FF7F" Clicked="btn_voltar_Clicked"/>
        </StackLayout>
        
    </ContentPage.Content>

</ContentPage>