<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Conta"
             xmlns:control="clr-namespace:Xamarin.Forms.MaskedEntry;assembly=Xamarin.Forms.MaskedEntry"
             Background="Black">

    <Grid RowDefinitions="100, *, *, *, *"
              ColumnDefinitions="*, *">

        <Image x:Name="logo" Grid.Row="0" Grid.Column="0" Scale="0.5"
               HorizontalOptions="Start"/>

        <!--="{Binding txt_nome}"-->
        <Label Text=" Olá, Bruno" FontSize="15"
                       TextColor="White"
                       Grid.Row="1"
                       Grid.Column="0"
                       Margin="10"
                       HorizontalOptions="StartAndExpand"/>


        <!--x:Name="{Binding txt_reais}"-->
            <Label x:Name="txt_reais" Text="R$ 1.628,05" Margin="10" FontSize="Body"
                             TextColor="White" Grid.Row="0"
                             Grid.Column="1" HorizontalOptions="EndAndExpand"
                             VerticalOptions="Start"/>

        <ImageButton x:Name="btnolho" Scale="0.3" Grid.Row="0" Grid.Column="1"
                     HorizontalOptions="Start"
                     Margin="10"
                     VerticalOptions="Start"
                     BackgroundColor="Transparent" Clicked="btnolho_Clicked"/>

    </Grid>


</ContentPage>